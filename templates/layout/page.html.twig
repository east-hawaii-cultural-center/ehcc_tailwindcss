{{ page.highlighted }}

{{ page.breadcrumb }}

{{ page.help }}

<main role="main">
  <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

  <div class="md:flex text-neutral-700">
    {{ page.content }}

    {% if page.sidebar_first %}
      {{ page.sidebar_first }}
    {% endif %}

    {% if page.sidebar_second %}
      {{ page.sidebar_second }}
    {% endif %}
  </div>
</main>

<footer role="contentinfo" class="flex-grow py-8 bg-neutral-700 text-neutral-100 [&_a]:text-white [&_a:hover]:text-neutral-300">
  <div class="container text-center grid grid-cols-1 md:grid-cols-3">
    <div>
      {% if page.footer_left %}
        {{ page.footer_left }}
      {% endif %}
    </div>
    <div>
      {% if page.footer_center %}
        {{ page.footer_center }}
      {% endif %}
    </div>
    <div>
      {% if page.footer_right %}
        {{ page.footer_right }}
      {% endif %}
    </div>
  </div>
</footer>
